<div align="center">
  <h2 class="title"><%= t('views.welcome.index.sign_in_welcome') %></h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="auth-sign-in-form" align="left">
      <div class="field mt">
        <%= f.label :email %><br/>
        <%= f.email_field :email, {autofocus: true, class: 'form-control input-block'} %>
      </div>

      <div class="field mt">
        <%= f.label :password %><br/>
        <%= f.password_field :password, {autocomplete: "off", class: 'form-control input-block'} %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field mt">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions mt">
        <%= f.submit "Log in", {class: 'btn btn-success btn-block'} %>
      </div>
      <div class="mt">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>

</div>




