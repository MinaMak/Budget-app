<%= form_for @expense do |f| %>
  <ul>
    <% @expense.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <div>
    <%= f.label :name, :class => "control-label" %>
    <%= f.text_field :name %>
  </div>
  </br>
  <div>
    <%= f.label :value, :class => "control-label" %>
    <%= f.number_field :value, step: :any %>
  </div>
  </br>
  <div>
    <%= f.label :date, :class => "control-label" %>
    <%= f.date_select :date %>
  </div>
  </br>
  <div>
    <%= f.label :category, :class => "control-label" %>
    <%= f.select :category_id, user_categories.collect {|c| [c.name, c.id]}, {include_blank: true} %>
  </div>
  </br>
  <div>
    <%= f.submit t('submit_expense'), class: "btn btn-primary" %>
  </div>

<% end %>