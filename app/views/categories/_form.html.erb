<%= form_for @category do |f| %>
    <ul>
      <% @category.errors.full_messages.each do |error| %>
          <li><%= error %></li>
      <% end %>
    </ul>
    <div>
      <%= f.label :name, :class => "control-label" %>
      <%= f.text_field :name %>
    </div>
    </br>
    <div>
      <%= f.submit t('submit_category'), class: "btn btn-primary" %>
    </div>

<% end %>