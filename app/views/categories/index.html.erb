<%= link_to t('new_category'), new_category_path, class: "btn btn-primary pull-right", style: 'margin: 10px' %>
<%= link_to t('expenses'), expenses_path, class: "btn btn-primary pull-right", style: 'margin: 10px' %>

<br>

<table class="table table-bordered table-striped table-condensed table-hover table-responsive">
  <tr class="shown">
    <th><%= t('name') %></th>
  </tr>
  <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to t('edit'), edit_category_path(category) %></td>
        <td><%= link_to t('delete'), category, method: :delete, data: {confirm: t('are_you_sure')} %></td>
      </tr>
  <% end %>
</table>
